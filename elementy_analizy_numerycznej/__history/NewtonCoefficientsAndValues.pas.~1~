unit NewtonCoefficients;

interface

procedure NewtonCoefficientsExtended(n : Integer; x : Array of Extended; var f : Array of Extended; var out : Array of Extended);

implementation

procedure NewtonCoefficientsExtended(n : Integer; x : Array of Extended; var f : Array of Extended; var out : Array of Extended);
var i,j : Integer;
    xi  : Extended;
begin
  {for i:=n downto 1 do
  begin
    for j:=n downto n-i+1 do
      f[j]:=(f[j]-f[j-1]) / (x[j]-x[j-(n-i+1)]);
  end;}
  {for i:=0 to (Length(x) div 2) do
  begin

  end;}
  for j:=1 to n do
    for i:=0 to n-j do
      f[i]:=(f[i+1]-f[i])/(x[i+j]-x[i]);
  for i:=1 to n do
   begin
     xi:=x[i];
     for j:=i downto 1 do
       f[j]:=f[j]-f[j-1]*xi;
   end;
end;
end.

